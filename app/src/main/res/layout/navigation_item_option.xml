<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_header_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_32sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="24dp">

    <ImageView
        android:id="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/nav_header_linear_layout"
        app:layout_constraintLeft_toLeftOf="@+id/nav_header_linear_layout"
        app:layout_constraintBottom_toBottomOf="@+id/nav_header_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_nav_dashboard"
        android:visibility="visible"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="16dp"
        app:layout_constraintLeft_toRightOf="@+id/icon"
        app:layout_constraintRight_toRightOf="@+id/nav_header_linear_layout"
        app:layout_constraintTop_toTopOf="@+id/nav_header_linear_layout"
        app:layout_constraintBottom_toBottomOf="@+id/nav_header_linear_layout"
        android:fontFamily="@font/bwsurcodemo_medium"
        android:textAlignment="textStart"
        android:textColor="@color/colorWhite" />

</androidx.constraintlayout.widget.ConstraintLayout>